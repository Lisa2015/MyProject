page {
    background-color:#fff;
    height: 100%;
}
/*header开始*/
.banner swiper {
    height: 360rpx;
}

.banner image {
    height: 360rpx;
    width: 100%;
}
.currentCity{
    font-size: 28rpx;
    float:right;
    padding:30rpx 30rpx;
}
/*header结束*/

/*content开始*/
.content {
    margin-top: 10%;
}
.content .tips{
  color:#f0797a;
  font-size:20rpx;
  padding: 20rpx 54rpx;
}
.contentTitle {
    padding-left: 54rpx;
    font-size: 45rpx;
}
.image-list {
    white-space: nowrap;
    background: white;
    display: flex;
    flex-direction:row;
}

.image-list image {
    width:90%;
    padding: 30rpx 25rpx 30rpx 54rpx;
    padding-right: 0;
    border-radius: 8%;
}
.recommandImages {
    height: 100%;
}
.recommandImages .title {
    padding-left: 54rpx;
    font-size: 38rpx;
}
.recommandImages text {
    display: block;
    font-size: 28rpx;
    padding-left: 54rpx;
    padding-top: 30rpx;
    padding-right: 45rpx;

}
.tabs {
    padding: 54rpx;
    font-size: 24rpx;
    align-items: center;
    height: 80rpx;
    background: white;
    justify-content: space-between;
    display: flex;
    border-bottom: 1px solid ghostwhite;
}

.tab {
    width:130rpx;
    height: 59rpx;
    /*display: flex;*/
    text-align: center;
    line-height: 60rpx;
    /*height: 100%;*/
    color: #999;
    border-radius: 5%;
    border:1px solid #eee;
}

.tab.tab-active {
    background-color: #f0797a;
    color: #fff;
}
.tab-content {
    position: relative;
}
.tab-contents {
    padding-bottom: 140rpx;
}
#weuiAgree {
    position:absolute;
    top:63%;
    left:9%;
}
.detailsContent {
    position: relative;
}
.detailsContent text {
    display: block;
}
.carDetail {
    font-size: 30rpx;
    padding-left: 54rpx;
    color: #444444;
}
.carIcon {
    height: 33rpx;
    width: 60rpx;
    border: 1px solid #f0797a;
    border-radius: 5%;
    font-size: 25rpx;
    color: #f0797a;
    text-align: center;
    line-height:33rpx;
    position: absolute;
    top:5%;
    right:55%;
}
.carSpeed {
    font-size: 15rpx;
    color: #5b5b5b;
    position: absolute;
    top:50%;
    right:68%;
}
.carSpeed1 {
    font-size: 15rpx;
    color: #5b5b5b;
    position: absolute;
    top:80%;
    right:70%;
}
.line {
    margin-top:30rpx;
    display:block;
    width:100%;
    height:1px;
    padding:0px;
    overflow:hidden;
    background-color: #efefef;
}
.goDetails {
    height: 60rpx;
    width: 145rpx;
    border: 1px solid #b5b5b5;
    border-radius: 5%;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    position: absolute;
    top:5%;
    right:4%;
    color: #b5b5b5;
}
.packageList {
    font-size:20rpx;
}
/* 页面底部开始 */
.footer {
    height: 120rpx;
    display: flex;
    position: fixed;
    bottom: 0rpx;
    z-index:999;
    background-color: #fff;
    width: 100%;
    border-top: 1px solid #eee;
}
.footer .currentPackage {
    font-size: 28rpx;
    padding: 30rpx 100rpx;
    display: flex;
}
.footer .submit {
    font-size: 28rpx;
    width: 150rpx;
    height: 70rpx;
    border: 1px solid #f0797a;
    background-color:#f0797a ;
    border-radius: 5%;
    color: #fff;
    margin-top: 20rpx;
    margin-left: 30%;
    margin-bottom: 30rpx;
    position: relative;
    padding:10rpx 0rpx 10rpx 0rpx;
}
.footer .submit .next {
    position: absolute;
    top:50%;
    left:20%;
}
